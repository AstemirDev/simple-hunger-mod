@DefaultItemSlotsPerRow = 9;
@DefaultItemSlotSpacing = 2;
@DefaultItemSlotSize = 74;
@DefaultItemGridPadding = 2;
@DefaultItemSlotsSelector = 4;

@BottomMargin = 30;
@ContainerMargin = 6;

@InventoryClosedContainerMargin = @BottomMargin + @ContainerMargin;
@InventoryOpenedContainerMargin = 0;
@SpecialSlotHighlightSize = 88;

@HotbarSlotSpacingHud = 4;
@HotbarSlotSpacingMenu = 2;
@HotbarWidthHud = @DefaultItemSlotSize * @DefaultItemSlotsPerRow + @HotbarSlotSpacingHud * @DefaultItemSlotsPerRow;
@HotbarWidthMenu = @DefaultItemSlotSize * @DefaultItemSlotsPerRow + @HotbarSlotSpacingMenu * @DefaultItemSlotsPerRow;
@HotbarHeight = @DefaultItemSlotSize + (2 * @DefaultItemGridPadding);

@AdventureIcon = "Textures/HungerIcon.png";
@AdventureBarFill = "Textures/HungerBarFill.png";
@CreativeIcon = "Textures/CreativeHungerIcon.png";
@CreativeBarFill = "Textures/CreativeHungerBarFill.png";

Group {
  LayoutMode: Bottom;
  Anchor: (Bottom: @InventoryClosedContainerMargin + @HotbarHeight + 32, Width: @HotbarWidthHud, Height: 12);

  Group {
    LayoutMode: Left;

    Group #Icon {
      Anchor: (Left: 0, Width: 24, Height: 24, Right: 4, Top: -8);
      Background: @AdventureIcon;
    }

    Group {
      Anchor: (Left: 0, Width: 318, Height: 12);
      Background: "Textures/HungerBackground.png";

      ProgressBar #ProgressBarAdventure {
        Anchor: (Width: 318, Height: 12);
        BarTexturePath: @AdventureBarFill;
        Visible: false;
      }

      ProgressBar #ProgressBarCreative {
        Anchor: (Width: 318, Height: 12);
        BarTexturePath: @CreativeBarFill;
        Visible: false;
      }
    }
  }
}
